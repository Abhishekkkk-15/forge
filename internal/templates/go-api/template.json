{
  "name": "go-api",
  "displayName": "Go API (net/http)",
  "description": "Minimal production-ready Go API using net/http",
  "language": "go",
  "framework": "net/http",
  "postCreate": [
  "cd {{.ProjectName}}",
  "go mod tidy",
  "go run ./cmd/server"
],
  "variables": {
    "ProjectName": {
      "type": "string",
      "source": "arg"
    },
    "Port": {
      "type": "number",
      "source": "flag",
      "flag": "port",
      "default": 8080,
      "description": "HTTP server port"
    }
  }
}
