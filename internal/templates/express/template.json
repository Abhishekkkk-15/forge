{
  "name": "express-ts",
  "displayName": "Express + TypeScript",
  "description": "Production-ready Express API using TypeScript",
  "language": "typescript",
  "framework": "express",

  "variables": {
    "ProjectName": {
      "type": "string",
      "source": "arg",
      "description": "Name of the project"
    },
    "Port": {
      "type": "number",
      "source": "flag",
      "flag": "port",
      "default": 3000,
      "description": "Port number for the HTTP server"
    }
  },

  "flags": {
    "docker": {
      "type": "bool",
      "default": false,
      "description": "Include Dockerfile and .dockerignore"
    },
    "eslint": {
      "type": "bool",
      "default": false,
      "description": "Include ESLint configuration"
    }
  }
}
